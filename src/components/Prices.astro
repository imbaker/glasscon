---
import prices from '../data/prices.json';
---

<div class="table-container">
  <table width="100%">
    <colgroup>
      <col style="width: 50%;" />
      <col style="width: 50%;" />
    </colgroup>
    <thead>
      <tr>
        <th>Size</th>
        <th>Cost</th>
      </tr>
    </thead>
    <tbody>
      {
        prices.map((i) => (
          <tr>
            <td class="item">{i.size}</td>
            <td class="item">&pound;{i.price}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>

<style>
  .table-container {
    max-width: 100%;
    overflow-x: auto;
    margin: 20px 0;
  }

  table {
    width: 100%;
    table-layout: fixed;
    max-width: 800px; /* Limit the table's width */
    margin: 0 auto; /* Center the table */
    border-collapse: collapse;
    text-align: left;
  }

  th,
  td {
    padding: 10px 12px; /* Reduce padding */
    border: 1px solid #ddd;
  }
  th {
    background-color: #4db8ff;
    color: #ffffff;
    font-weight: bold;
  }

  tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  tr:hover {
    background-color: #f1f1f1;
  }

  .item {
    text-align: left;
  }
</style>
