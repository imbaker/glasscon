---
import { Icon } from 'astro-icon/components';

interface Props {
  menuTitle: string;
  href: string;
  menuIcon: string;
}

const { menuTitle, href, menuIcon } = Astro.props;

const { pathname } = Astro.url;
console.log('pathname', pathname);
---

<div class="flex h-full items-center">
  <div
    class:list={[
      {
        'text-primary': pathname !== href,
        'text-secondary': pathname === href,
        'bg-primary': pathname === href,
        'hover:bg-highlight': pathname !== href,
        'hover:text-primary': pathname !== href,
        'hover:bg-primary': pathname === href,
        'hover:text-highlight': pathname === href,
        uppercase: true,
        'p-2': true,
        'm:px-6': true,
        'h-full': true,
        transition: true,
        'ease-in-out': true,
      },
    ]}>
    <a href={href} class="flex gap-2 h-full items-center md:text-lg text-sm">
      <Icon name={menuIcon} class="size-6 md:size-8" />{menuTitle}
    </a>
  </div>
</div>
